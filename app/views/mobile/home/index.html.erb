	</nav>
<%= render "brand_film"%>
<section id="poster_coupon">
	<div class="poster">
		<div class="poster_title">
			<a href="#" class="winner_btn"><%= link_to(image_tag("mobile/btn_winner.png", class:"poster_title_btn"), mobile_winners_path) %></a>

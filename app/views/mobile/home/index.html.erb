<div class="menu_form">
	<%= link_to(image_tag("mobile/back/menu_3.png", class:"menu_list"), "#menu_3", id:"btn_brand_film") %>
	<%= link_to(image_tag("mobile/back/menu_1.png", class:"menu_list"), "#menu_1", id:"btn_poster_coupon") %>
	<%= link_to(image_tag("mobile/back/menu_2.png", class:"menu_list"), "#menu_2", id:"btn_brand_talk") %>
</div>
<div class="contain">
  <nav data-scroll-header class="navi" id="mobile_navi">
		<%= image_tag("mobile/logo.png", class:"logo") %>
